<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ad.aemetapp.DetalleDiaScrollingActivity"
    tools:showIn="@layout/activity_detalle_dia">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:text="Fecha"
            android:textSize="23dp"
            android:gravity="center"
            android:id="@+id/text_view_fecha"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_below="@+id/text_view_fecha"
            android:id="@+id/cardViewEstadocielo">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageViewEstadoCielo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:src="@mipmap/ic_launcher"/>
                <TextView
                    android:id="@+id/text_view_descripcionEstadoCielo"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"
                    android:textSize="24dp"
                    android:text="Descripción"
                    android:gravity="center"
                    android:layout_toRightOf="@id/imageViewEstadoCielo"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="105dp"
            android:layout_below="@+id/cardViewEstadocielo"
            android:id="@+id/cardViewTemperatura">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Temperaturas"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thermometermax"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="45dp"
                    android:id="@+id/imageView1"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_view_tempMaxima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_alignTop="@+id/imageView1"
                    android:layout_alignBottom="@+id/imageView1"
                    android:textColor="@android:color/black"
                    android:text="º"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thermometermin"
                    android:layout_toRightOf="@id/imageView1"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/imageView2"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_view_tempMinima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:textColor="@android:color/black"
                    android:text="º"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_alignTop="@+id/cardViewTemperatura"
            android:layout_toRightOf="@+id/cardViewTemperatura"
            android:id="@+id/cardViewSensacionTermica">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Sensacion Térmica"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thermometermax"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="45dp"
                    android:id="@+id/imageView3"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_view_sensMaxima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_alignBottom="@+id/imageView3"
                    android:textColor="@android:color/black"
                    android:text="º"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thermometermin"
                    android:layout_toRightOf="@id/imageView3"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/imageView4"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/text_view_sensMinima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView4"
                    android:layout_alignTop="@+id/imageView4"
                    android:layout_alignBottom="@+id/imageView4"
                    android:textColor="@android:color/black"
                    android:text="º"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_below="@+id/cardViewSensacionTermica"
            android:id="@+id/cardViewProbabilidadPrecipitacion">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Probabilidad de precipitación"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:text="Dia:"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    android:id="@+id/precip_dia" />
                <TextView
                    android:id="@+id/text_view_precip_dia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/precip_dia"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/background_dark"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/precip_noche"
                    android:text="Noche:"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignBaseline="@+id/precip_dia"
                    android:layout_alignBottom="@+id/precip_dia"
                    android:layout_toRightOf="@+id/view"
                    android:layout_toEndOf="@+id/view" />
                <TextView
                    android:id="@+id/text_view_precip_noche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/precip_noche"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/background_dark"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_below="@+id/cardViewProbabilidadPrecipitacion"
            android:id="@+id/cardViewCotaDeNieve">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Cota de Nieve"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/cotaNieve_dia"
                    android:text="Dia:"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/text_view_cotaNieve_dia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/cotaNieve_dia"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/background_dark"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view2"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cotaNieve_noche"
                    android:text="Noche:"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignBaseline="@+id/text_view_cotaNieve_dia"
                    android:layout_alignBottom="@+id/text_view_cotaNieve_dia"
                    android:layout_toRightOf="@+id/view2"
                    android:layout_toEndOf="@+id/view2" />
                <TextView
                    android:id="@+id/text_view_cotaNieve_noche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/cotaNieve_noche"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/background_dark"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
